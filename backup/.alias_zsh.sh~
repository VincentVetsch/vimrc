alias sz=". ~/.zshrc"
alias sAndS="sudo find / \( -perm -4000 -fprintf suid.txt "%#m %u %p\n" \) , \( -size +1000M -fprintf big.txt "%-10s %p\n" \)"
alias fgit="find -name ".git" -print -prune | more"
alias rmdir="find -type d -ok rm -rf '{}' \;"
alias slexx="ssh vince@Lexx-1"
alias simac="ssh Vince@Imac"
alias s="sudo -s"
alias xo="xdg-open"
alias vi='gvim --remote-silent'
alias h="history"
alias hf="history | grep"
#SSH Mount Local Network mount points
alias m.lexx="sshfs vince@Lexx-1:/home/vince /media/vince/lexx"
alias m.lexx-vid1="sshfs vince@Lexx-1:/media/vince/Video1 /media/vince/lexx-video1"
alias m.lexx-vid2="sshfs vince@Lexx-1:/media/vince/Video2 /media/vince/lexx-video2"
alias m.lexx-back="sshfs vince@Lexx-1:/media/vince/Backup /media/vince/lexx-backup"
alias m.imac="sshfs Vince@Imac:/ /media/vince/imac"
alias m.sd="pmount /media/vince/sd/"
alias u.sd="pumount /media/vince/sd/"

#Permissions
alias 600='chmod 600'
alias 660='chmod 660'
alias 640='chmod 640'
alias 644='chmod 644'
alias 755='chmod 755'
alias 775='chmod 775'
alias 700='chmod 700'

#apt-get
alias agi="sudo apt-get install"
alias agr="sudo apt-get remove"
alias agu="sudo apt-get update"

#Network
alias localNet="arp -a | awk '{ print $3"\t" $2 }' "
alias connectedIP="netstat -anp | grep 'tcp\|udp' | awk '{ print $1"\t"$5"\t"$7"\t"$8 }' | cut -d: -f1 | sort | uniq -c | sort -n"
alias connectedPorts="sudo netstat -alpn |awk '{ print $1"\t"$5"\t"$7"\t"$8  }' | sort | uniq -c | sort -n"
