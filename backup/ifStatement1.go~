 package main

import (
    "fmt"
    "math"
)

func pow(x, n, lim float64) float64 {
    /*Power function with limit
        Arguments:
            x    the number
            n    the power
            lim  the limit

        Return:
            The Value mof the power function or the lim value
    */
    if v := math.Pow(x, n); v < lim{
        return v
    } else {
        fmt.Printf("%g >= %g\n", v, lim)
    }
    return lim
}

func main() {
    fmt.Println(
        pow(3, 2, 10),
        pow(4, 5, 100),
        pow(4, 5, 100000),
    )
}
