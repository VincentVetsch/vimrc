        <div id="box1" style="width:200px; height:50px; background:green;"></div>
        <img src="python.png" alt="my Image" id="myImage" />
        <script type="text/javascript">
            var box = document.getElementById('box');
            var box1 = document.getElementById('box1');
            var myImg = document.getElementById('myImage');

            function fadeOut(theElement, theSpeed){
                if(!theElement.style.opacity){
                    theElement.style.opacity = 1;
                }
                setInterval(function() {
                        theElement.style.opacity -= .02},
                        theSpeed / 50);
            }
            fadeOut(myImg, 2500);
            fadeOut(box, 5000);
            fadeOut(box1, 10000);
            //fadeIn(box1, 2000);
        </script>
