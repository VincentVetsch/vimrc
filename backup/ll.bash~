#!/bin/bash
# Color settings
RESET="\033[0m"
BLUE="\033[1;34m"
RED="\033[1;31m"
YELLOW="\033[1;33m"
GREEN="\033[1;32m"
function fileType(){
        echo -ne "$BLUE $1  $2$RESET"
}
function sizeOfFile(){
   echo -ne "$RED $1 $RESET"
}
function userAndGroup(){
    echo -ne "$YELLOW $1 $2 $RESET"
}
function operm(){
    echo -ne "$GREEN   $1 $RESET"
}
function perm(){
    echo -ne "$GREEN $1 $RESET"
}
function ctime() {
    echo -ne "$YELLOW $1 $RESET"
}
#
# TODO -- add sort
# TODO -- have switch for hidden files
# TODO -- add path variable
# TODO -- add filter variable
# TODO -- add color variables
# TODO -- convert to python
# TODO -- add a file and directory count function
# TODO -- add du function for directory total size 'du -sh'
echo -e "File listing for: \033[1;34m $PWD $RESET\n"
#find -maxdepth 1 -printf "%.5m  $(perm "%5M")  %#5u:%-5g %10s  %AD  %TD  %CD  $(ft "%Y") %P\n"
find  -maxdepth 1 ! -name ".*" -printf "$(operm "%.5m")$(perm "%5M") $(userAndGroup "%u" "%g") $(ctime "%CD") $(sizeOfFile "%10s") $(fileType %Y "%P" "%p")\n"
echo ""
echo "Total Size:   `du -sh | awk '{print $1}'`"
echo "Total Files:  `ls | wc -l`"
