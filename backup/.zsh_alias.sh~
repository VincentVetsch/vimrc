# vim: foldmethod=marker
#General commands {{{1
    alias ydl='youtube-dl -t'
    # remove spaces from filenames in current directory:
    alias rmSpaceFilename="rename -n 's/[\s]/''/g' *"
    # change capitals to lowercase in filenames in current directory:
    alias makelcFilename="rename 'y/A-Z/a-z/' *"
    alias tree="tree -AC"
    alias sz=". ~/.zshrc"
    alias pf="pydf"
    alias mem="free -hl"
    alias mv="mv -v"
    alias ipy="ipython"
    alias ipy.nbk="ipy notbook &"
    alias f.vcs="fbzr && fgit && fsvn && fhg && fcvs"
    alias f.suid='sudo find / -perm -4000 -fprintf suid.txt "%#m %u %p\n" '
    alias f.big='sudo find / -size +1000M -fprintf big.txt "%-10s %p\n" '
    alias f.py='find  -name "*.py"'
    alias f.html='find  -name "*.html"'
    alias f.css='find  -name "*.css"'
    alias f.js='find  -name "*.js"'
    alias f.admin='find  -name "admin.py"'
    alias f.model='find  -name "models.py"'
    alias f.views='find  -name "views.py"'
    alias f.tests='find  -name "tests.py"'
    alias f.urls='find  -name "urls.py"'
    alias f.djsettings='find -name "settings.py" -or -name "urls.py" -or -name "wsgi.py"'
    alias rm.dir='find  -type d -ok rm -rf '{}' \;'
    alias rm.un='find  -name "*.un~" -exec rm '{}' \;'
    alias rm.pyc='find  -name "*.pyc" -exec rm '{}' \;'
    alias s="sudo -s"
    alias t="touch"
    alias xo="xdg-open"
    alias startApps="sudo sed -i "s/NoDisplay=true/NoDisplay=false/g" /etc/xdg/autostart/*.desktop"
#Parole Playback {{{1
    alias pr="parole"
    alias pr.play="pr -p"
    alias pr.stop="pr -s"
    alias pr.next="pr -N"
    alias pr.prev="pr -P"
    alias pr.add="pr -a"
#Banshee playback {{{1
    alias bs="banshee"
    alias bs.hide="bs --hide"
    alias bs.show="bs --show"
    alias bs.play="bs --play"
    alias bs.pause="bs --pause"
    alias bs.stop="bs --stop"
    alias bs.done="bs --stop-when-finished"
    alias bs.next="bs --next"
    alias bs.prev="bs --previous"
    alias bs.info="bs --query-artist --query-album  --query-title --query-rating"
    function bs.rate(){
        bs --set-rating=$1
    }
