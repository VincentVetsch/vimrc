#Django aliases {{{1
    alias py.path='python -c "import sys; print(sys.path)"'
    alias dj.ver='python -c "import django; print(django.get_version())"'
    alias dj.path='python -c "import sys; sys.path = sys.path[1:]; import django; print(django.__path__)"'
    alias dj.valid='python manage.py validate'
    alias dj.pic='python manage.py graph_models -a -o $PWD.png'
    alias dj.inst='sudo pip install ~/Projects/django/'
    alias dj.start='django-admin.py startproject'
    alias dj.app='python manage.py startapp'
    alias dj.sync='python manage.py syncdb'
    alias dj.servl='python manage.py runserver 8080'
    alias dj.serv='python manage.py runserver 0.0.0.0:8000'
    alias dj.shell='python manage.py shell'
