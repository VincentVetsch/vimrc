#VI commands {{{1
    alias tdfx='echo "${RED}Fix Bug List$RESET"; fx; echo "\n${GREEN}TODO List$RESET"; td'
    alias fx='grep -RIn FIXME *'
    alias td='grep -RIn TODO *'
    alias vi='gvim --remote-silent'
    alias vi.a='vi ~/.zsh_alias.sh'
    alias vi.td='vi $(grep -lRI TODO *)'
    alias vi.fx='vi $(grep -lRI FIXME *)'
    alias vi.kjv="vi ~/Documents/HolyBible/KJVBible/Canon/*.txt"
    alias vi.rnote="vi ~/Documents/Notes/Religion.note"
    alias vi.zsh='vi ~/.zsh_alias.sh ~/.zsh_func.sh ~/.zshrc'
    alias vi.vim='vi ~/.vimrc'
    alias vi.onotes='vi ~/Documents/Notes/OpeningNote.note'
    alias vi.mcnote='vi ~/Documents/Notes/McGlennInspections.note'
    alias vi.mcglenn='pj.mc; vi $(f.html) $(f.css) $(f.py) $(f.js) ~/Documents/Notes/McGlennInspections.note'
    alias update.mcnote='git add ~/Projects/McInspWork/McGlennInspections.note; git commit; gpom'
    alias vi.dj.settings='vi $(f.djsettings)'
    alias vi.dj.admin='vi $(f.admin)'
    alias vi.dj.model='vi $(f.model)'
    alias vi.dj.view='vi $(f.views)'
    alias vi.dj.test='vi $(f.tests)'
    alias vi.dj.url='vi $(f.urls)'
    alias vi.dj.html='vi $(f.html)'
    alias vi.dj.py='vi $(f.py)'
#Git commands  {{{1
    alias gpom="git push origin master"
    alias gcm="git commit -m"
    alias gww="git add **"
#History and Aliases {{{1
    alias h="history"
    alias hf="history | grep"
    alias a="alias"
    alias af="a | grep"
    alias agit="a | grep git"
#SSH Mount Local Network mount points {{{1
    alias m.lexx="sshfs vince@Lexx-1:/home/vince /media/vince/lexx"
    alias m.lexx.vid1="sshfs vince@Lexx-1:/media/vince/Video1 /media/vince/lexx-video1"
    alias m.lexx.vid2="sshfs vince@Lexx-1:/media/vince/Video2 /media/vince/lexx-video2"
    alias m.lexx.back="sshfs vince@Lexx-1:/media/vince/Backup /media/vince/lexx-backup"
    alias m.imac="sshfs Vince@Imac:/ /media/vince/imac"
    alias m.lexx.all="m.lexx && m.lexx.vid1 && m.lexx.vid2 && m.lexx.back"
    alias m.sd="pmount /media/vince/sd/"
    alias u.sd="pumount /media/vince/sd/"
    alias u.lexx="sudo umount vince@Lexx-1:/home/vince"
    alias u.lexx.back="sudo umount vince@Lexx-1:/media/vince/Backup"
    alias u.lexx.vid1="sudo umount vince@Lexx-1:/media/vince/Video1"
    alias u.lexx.vid1="sudo umount vince@Lexx-1:/media/vince/Video2"
