package main

import (
    "fmt"
    "math"
    "database/sql"
)
import _ "code.google.com/p/go-mysql-driver/mysql"

func pow(x, n, lim float64) float64 {
    /*Power function with limit
        Arguments:
            x    the number
            n    the power
            lim  the limit

        Return:
            The Value mof the power function or the lim value
    */
    if v := math.Pow(x, n); v < lim{
        return v
    }
    return lim
}

func main() {
    db, e := sql.Open("mysql", "user:password@/dbname?charset=utf8")
    fmt.Println(
        db,
        pow(3, 2, 10),
        pow(4, 5, 100),
        pow(4, 5, 100000),
    )
}
