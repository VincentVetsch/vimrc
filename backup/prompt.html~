    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title>Prompt DEMO</title>
    </head>
    <body>
        <p>Click the button to demostrate the prompt box.</p>
        <button onclick="promptBox('demo')">Try It</button>
        <p id="demo"></p>
        <script>
            function promptBox(theID){
                var x;
                var defaultName = "Richard Head"
                var name = prompt("Please enter your Name", defaultName);
                if (name != null){
                    if (name === defaultName){
                        x = "Hello Dick Head, Fill out the box!"
                    } else {
                        x = "Hello " + name + "! How are you Today?";
                    }
                    document.getElementById(theID).innerHTML = x;
                }
            }
        </script>
    </body>
</html>
