import sys
import os

class MyClass:
        """A simple class"""
        i = 12345
        j = 'hello'
        def f(self):
                return 'hello world'
        def __init__ (self):
                """
                Function doc
                """
                self.data = []


class Complex:
        """
        Class doc
        """
        def __init__ (self, realpart, imagpart):
                """ Class initialiser """
                self.r = realpart
                self.i = imagpart
class Reverse:
                """
                Iterator for looping over a sequence backwards
                """
                def __init__ (self, data):
                        """ Class initialiser """
                        self.data = data
                        self.index = len(data)
                def __iter__ (self):
                        """
                        Returns self
                        """
                        return self
                def next (self):
                        """
                        Returns the next value of data
                        """
                        if self.index == 0:
                                raise StopIteration
                        self.index = self.index - 1
                        return self.data[self.index]


if __name__ == "__main__":
        x = MyClass()
        y = 'Python'
        print x.i
        print x.j
        print x.f()
        c = Complex(3.0, -4.5)
        print c.r, c.i
        cc = Complex(4.0, -5.0)
        print cc.r, cc.i
        print c.r, c.i
        for char in Reverse('spam'):
                print char
